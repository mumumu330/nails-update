<!DOCTYPE html>
  <html>
    <head>
      <title>Nails</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    </head>

    <body>
    <div class="wrapper">
      <header class="navbar navbar-fixed-top">
        <div class="col-xs-12">
          
          <nav class="navbar">
            <div class="navbar-header">
                <%# <ul class='nav navbar-nav navbar-left' > %>
                  <%= image_tag'logo.png', :size => '80x80' %>
                <%# </ul>  %>
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
                <%# <span class="sr-only">メニュー</span> %>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
          
          <div id="gnavi" class="collapse navbar-collapse">
          <%# <ul class='nav navbar-nav navbar-left' >
            <%= image_tag'logo.png', :size => '80x80' %>
          <%# </ul>  %>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="nav-list">
              <%= link_to '新規投稿', new_post_image_path, class: "glyphicon glyphicon-plus-sign" %>
            </li>
            <li class="nav-list">
              <%= link_to '投稿一覧', post_images_path, class: "glyphicon glyphicon-picture" %>
            </li>
            <li class="nav-list">
              <%= link_to 'ランキング', root_path, class: "glyphicon glyphicon-globe" %>
            </li>
            <li class="nav-list">
              <%= link_to 'マイページ', user_path(current_user.id), class: "glyphicon glyphicon-home" %>
            </li>
            <li class="nav-list">
              <%= link_to 'DM一覧', rooms_path, class: "glyphicon glyphicon-envelope" %>
            </li>
            <li class="nav-list">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
            </li>
          <% else %>
            <li class="nav-list">
              <%= link_to '新規登録', new_user_registration_path, class: "glyphicon glyphicon-edit" %>
            </li>
            <li class="nav-list">
              <%= link_to 'ログイン', new_user_session_path, class: "glyphicon glyphicon-log-in" %>
            </li>
            <li class="nav-list">
              <%= link_to 'About', home_about_path, class: "glyphicon glyphicon-link" %>
            </li>
          <% end %>
          
          <% if user_signed_in? %>
            <%= render 'layouts/search' %>
          <% end %>
          </ul>
          </div>
          </nav>
        </div>
      </header>

      
        <div class="body">
        
          <%# <div class="glayback"> %>
            <div class="container">
              <div class="row">
                <%# <div class="col-md-offset-3 col-md-6">
                  <div class="whiteback"> %>
                    <p id="notice"><%= notice %></p>
                    <%= yield %>
                  <%# </div>
                </div> %>
              </div>
            </div>
          <%# </div>  %>

      <footer>
        <div class="container">
          <div class="row">
            <div class="col-md-offset-9 col-md-2">
                <p class="no-margin" style="font-size: 20px;">
                  CopyRight Nails
                </p>
            </div>
          </div>
        </div>
      </footer>
      
      </div>
    </div>
  </body>
</html>
